<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VademecumDigitalis.ItemLogPage"
             Title="Item Log">
    <VerticalStackLayout Padding="12" Spacing="8">
        <Label x:Name="TitleLabel" FontAttributes="Bold" />
        <CollectionView x:Name="LogCollection" ItemsSource="{Binding}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Message}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Kommentar hinzufÃ¼gen" Clicked="OnAddLog" />
    </VerticalStackLayout>
</ContentPage>
