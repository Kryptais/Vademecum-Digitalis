<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:VademecumDigitalis.ViewModels"
             x:Class="VademecumDigitalis.InventoryAddItemPage"
             x:DataType="viewmodels:InventoryAddItemViewModel"
             Title="Neues Item">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="Name" />
            <Entry Text="{Binding Name}" />

            <Label Text="Anzahl" />
            <Entry Text="{Binding QuantityText}" Keyboard="Numeric" />

            <Label Text="Gewicht pro Einheit (Stein)" />
            <Entry Text="{Binding WeightText}" Keyboard="Numeric" />

            <Label Text="Wert (Silbertaler)" />
            <Entry Text="{Binding ValueText}" Keyboard="Numeric" />

            <HorizontalStackLayout Spacing="8">
                <Label Text="Verbrauchsgegenstand?" VerticalOptions="Center"/>
                <CheckBox IsChecked="{Binding IsConsumable}" />
            </HorizontalStackLayout>

            <Label Text="Details" />
            <Editor Text="{Binding Details}" HeightRequest="120" />

            <HorizontalStackLayout Spacing="12">
                <Button Text="Abbrechen" Command="{Binding CancelCommand}" />
                <Button Text="OK" Command="{Binding SaveCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
