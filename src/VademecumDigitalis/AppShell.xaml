<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VademecumDigitalis.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VademecumDigitalis"
    Title="Vademecum Digitalis">

    <TabBar>
        <ShellContent
            Title="Hauptblatt"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Vorteile/Nachteile"
            ContentTemplate="{DataTemplate local:AdvantagesPage}"
            Route="AdvantagesPage" />

        <ShellContent
            Title="Talente"
            ContentTemplate="{DataTemplate local:TalentsPage}"
            Route="TalentsPage" />

        <ShellContent
            Title="Kampf"
            ContentTemplate="{DataTemplate local:CombatTalentsPage}"
            Route="CombatTalentsPage" />
    </TabBar>

</Shell>
