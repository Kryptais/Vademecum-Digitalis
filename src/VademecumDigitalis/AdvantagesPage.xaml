<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VademecumDigitalis.AdvantagesPage"
             Title="Vorteile/Nachteile">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">
            <Label Text="Vorteile & Nachteile" FontSize="24" FontAttributes="Bold" />
            <Label Text="Eintrag pro Zeile (V1 als Freitext)." TextColor="#4B5563" />

            <Label Text="Vorteile" FontAttributes="Bold" />
            <Editor AutoSize="TextChanges"
                    MinimumHeightRequest="160"
                    Placeholder="z. B. Begabung (Sinnesschärfe), Glück I"
                    Text="{Binding Vorteile}" />

            <Label Text="Nachteile" FontAttributes="Bold" />
            <Editor AutoSize="TextChanges"
                    MinimumHeightRequest="160"
                    Placeholder="z. B. Neugier 6, Prinzipientreue 5"
                    Text="{Binding Nachteile}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
