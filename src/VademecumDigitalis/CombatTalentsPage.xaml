<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VademecumDigitalis.CombatTalentsPage"
             Title="Kampftalente">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">
            <Label Text="Kampftalente" FontSize="24" FontAttributes="Bold" />
            <Label Text="V1: Freitextliste. Spaeter mit Waffenprofilen und AT/PA-Details." TextColor="#4B5563" />

            <Editor AutoSize="TextChanges"
                    MinimumHeightRequest="420"
                    Placeholder="z. B. Schwerter 12, Raufen 8, Dolche 10"
                    Text="{Binding Kampftalente}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
