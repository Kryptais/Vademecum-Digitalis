<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VademecumDigitalis.TalentsPage"
             Title="Talente">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12"
                             BindableLayout.ItemsSource="{Binding TalentGruppen}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Spacing="8">
                        <Border Stroke="#0E7490" BackgroundColor="#0E7490" StrokeShape="RoundRectangle 8" Padding="8,6">
                            <Label Text="{Binding Gruppe}" TextColor="White" FontAttributes="Bold" FontSize="16" />
                        </Border>

                        <Grid ColumnDefinitions="2.2*,1*,0.9*,0.9*,0.9*,1.1*,0.8*,1.6*"
                              ColumnSpacing="6"
                              BackgroundColor="#E2E8F0"
                              Padding="8,6">
                            <Label Grid.Column="0" Text="Talent" FontAttributes="Bold" FontSize="12" />
                            <Label Grid.Column="1" Text="Steigerungsfaktor" FontAttributes="Bold" FontSize="12" />
                            <Label Grid.Column="2" Text="Probe 1" FontAttributes="Bold" FontSize="12" />
                            <Label Grid.Column="3" Text="Probe 2" FontAttributes="Bold" FontSize="12" />
                            <Label Grid.Column="4" Text="Probe 3" FontAttributes="Bold" FontSize="12" />
                            <Label Grid.Column="5" Text="Belastungseinfluss" FontAttributes="Bold" FontSize="12" />
                            <Label Grid.Column="6" Text="FW" FontAttributes="Bold" FontSize="12" />
                            <Label Grid.Column="7" Text="Anmerkung" FontAttributes="Bold" FontSize="12" />
                        </Grid>

                        <VerticalStackLayout Spacing="1"
                                             BindableLayout.ItemsSource="{Binding Eintraege}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="2.2*,1*,0.9*,0.9*,0.9*,1.1*,0.8*,1.6*"
                                          ColumnSpacing="6"
                                          BackgroundColor="#F8FAFC"
                                          Padding="8,6">
                                        <Label Grid.Column="0" Text="{Binding Talent}" FontSize="12" />
                                        <Label Grid.Column="1" Text="{Binding Steigerungsfaktor}" FontAttributes="Bold" HorizontalOptions="Center" FontSize="12" />
                                        <Label Grid.Column="2" Text="{Binding Probe1}" HorizontalOptions="Center" FontSize="12" />
                                        <Label Grid.Column="3" Text="{Binding Probe2}" HorizontalOptions="Center" FontSize="12" />
                                        <Label Grid.Column="4" Text="{Binding Probe3}" HorizontalOptions="Center" FontSize="12" />
                                        <Label Grid.Column="5" Text="{Binding Belastungseinfluss}" HorizontalOptions="Center" FontSize="12" />
                                        <Entry Grid.Column="6" Keyboard="Numeric" Text="{Binding Fw}" FontSize="12" HorizontalTextAlignment="Center" />
                                        <Entry Grid.Column="7" Text="{Binding Anmerkung}" FontSize="12" />
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
