<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VademecumDigitalis.TalentsPage"
             Title="Talente">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">
            <Label Text="Talente" FontSize="24" FontAttributes="Bold" />
            <Label Text="V1: Freitextliste. Später strukturierte Talenttabelle." TextColor="#4B5563" />

            <Editor AutoSize="TextChanges"
                    MinimumHeightRequest="420"
                    Placeholder="z. B. Menschenkenntnis 8, Überreden 6, Sinnesschärfe 10"
                    Text="{Binding Talente}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
