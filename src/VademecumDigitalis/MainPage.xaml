<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VademecumDigitalis.MainPage"
             Title="Charakterbogen">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Vademecum Digitalis"
                   FontSize="28"
                   FontAttributes="Bold" />
            <Label Text="Digitaler DSA-5-Charakterbogen (Hauptblatt)"
                   FontSize="16"
                   TextColor="#4B5563" />

            <Border Stroke="#D1D5DB" StrokeShape="RoundRectangle 12" Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Charakterinfos" FontSize="18" FontAttributes="Bold" />
                    <Entry Placeholder="Name" Text="{Binding Name}" />
                    <Entry Placeholder="Spieler" Text="{Binding Spieler}" />
                    <Entry Placeholder="Spezies" Text="{Binding Spezies}" />
                    <Entry Placeholder="Kultur" Text="{Binding Kultur}" />
                    <Entry Placeholder="Profession" Text="{Binding Profession}" />
                    <Entry Placeholder="Geschlecht" Text="{Binding Geschlecht}" />
                    <Entry Placeholder="Geburtstag (z. B. 12. Rahja 1038 BF)" Text="{Binding Geburtstag}" />
                    <Entry Placeholder="Alter" Text="{Binding Alter}" />
                    <Entry Placeholder="Größe" Text="{Binding Größe}" />
                    <Entry Placeholder="Gewicht" Text="{Binding Gewicht}" />
                    <Entry Placeholder="Haarfarbe" Text="{Binding Haarfarbe}" />
                    <Entry Placeholder="Augenfarbe" Text="{Binding Augenfarbe}" />
                    <Entry Placeholder="Sozialstatus" Text="{Binding Sozialstatus}" />
                </VerticalStackLayout>
            </Border>

            <Border Stroke="#D1D5DB" StrokeShape="RoundRectangle 12" Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Hauptattribute (DSA 5)" FontSize="18" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                        <Label Grid.Row="0" Text="Mut (MU)" VerticalOptions="Center" />
                        <Entry Grid.Row="0" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Mut}" />

                        <Label Grid.Row="1" Text="Klugheit (KL)" VerticalOptions="Center" />
                        <Entry Grid.Row="1" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Klugheit}" />

                        <Label Grid.Row="2" Text="Intuition (IN)" VerticalOptions="Center" />
                        <Entry Grid.Row="2" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Intuition}" />

                        <Label Grid.Row="3" Text="Charisma (CH)" VerticalOptions="Center" />
                        <Entry Grid.Row="3" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Charisma}" />

                        <Label Grid.Row="4" Text="Fingerfertigkeit (FF)" VerticalOptions="Center" />
                        <Entry Grid.Row="4" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Fingerfertigkeit}" />

                        <Label Grid.Row="5" Text="Gewandtheit (GE)" VerticalOptions="Center" />
                        <Entry Grid.Row="5" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Gewandtheit}" />

                        <Label Grid.Row="6" Text="Konstitution (KO)" VerticalOptions="Center" />
                        <Entry Grid.Row="6" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Konstitution}" />

                        <Label Grid.Row="7" Text="Körperkraft (KK)" VerticalOptions="Center" />
                        <Entry Grid.Row="7" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Körperkraft}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <Border Stroke="#D1D5DB" StrokeShape="RoundRectangle 12" Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Basiswerte" FontSize="18" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                        <Label Grid.Row="0" Text="Lebensenergie (LeP)" VerticalOptions="Center" />
                        <Entry Grid.Row="0" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Lebensenergie}" />

                        <Label Grid.Row="1" Text="Astralenergie (AsP)" VerticalOptions="Center" />
                        <Entry Grid.Row="1" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Astralenergie}" />

                        <Label Grid.Row="2" Text="Karmaenergie (KaP)" VerticalOptions="Center" />
                        <Entry Grid.Row="2" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Karmaenergie}" />

                        <Label Grid.Row="3" Text="Seelenkraft (SK)" VerticalOptions="Center" />
                        <Entry Grid.Row="3" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Seelenkraft}" />

                        <Label Grid.Row="4" Text="Zähigkeit (ZK)" VerticalOptions="Center" />
                        <Entry Grid.Row="4" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Zähigkeit}" />

                        <Label Grid.Row="5" Text="Initiative-Basis" VerticalOptions="Center" />
                        <Entry Grid.Row="5" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding InitiativeBasis}" />

                        <Label Grid.Row="6" Text="Geschwindigkeit (GS)" VerticalOptions="Center" />
                        <Entry Grid.Row="6" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding Geschwindigkeit}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <Border Stroke="#D1D5DB" StrokeShape="RoundRectangle 12" Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Abenteuerpunkte & Schicksalspunkte (V1)" FontSize="18" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                        <Label Grid.Row="0" Text="AP gesamt" VerticalOptions="Center" />
                        <Entry Grid.Row="0" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding AbenteuerpunkteGesamt}" />

                        <Label Grid.Row="1" Text="AP verfügbar" VerticalOptions="Center" />
                        <Entry Grid.Row="1" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding AbenteuerpunkteVerfuegbar}" />

                        <Label Grid.Row="2" Text="AP ausgegeben" VerticalOptions="Center" />
                        <Entry Grid.Row="2" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding AbenteuerpunkteAusgegeben}" />

                        <Label Grid.Row="3" Text="SchiP gesamt" VerticalOptions="Center" />
                        <Entry Grid.Row="3" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding SchicksalspunkteGesamt}" />

                        <Label Grid.Row="4" Text="SchiP verfügbar" VerticalOptions="Center" />
                        <Entry Grid.Row="4" Grid.Column="1" WidthRequest="80" Keyboard="Numeric" Text="{Binding SchicksalspunkteVerfuegbar}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
