<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:VademecumDigitalis.ViewModels"
             x:Class="VademecumDigitalis.MoneyTransferPage"
             x:DataType="viewmodels:MoneyTransferViewModel"
             Title="Geldtransfer"
             BackgroundColor="#121212">
    <ContentPage.Resources>
        <!-- Re-use converter if available in App.xaml, otherwise declare local or omit if passing string -->
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16" VerticalOptions="Center">
            <Label Text="Geld transferieren" Style="{StaticResource HeadlineLabel}" HorizontalTextAlignment="Center" />
            
            <Label Text="{Binding SourceName, StringFormat='Von: {0}'}" Style="{StaticResource SubheadLabel}" HorizontalTextAlignment="Center" />
            
            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" ColumnSpacing="10" RowSpacing="10">
                <Label Text="Dukaten:" Grid.Row="0" Grid.Column="0" TextColor="Gold" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry Text="{Binding DukatenText}" Grid.Row="0" Grid.Column="1" Keyboard="Numeric" Placeholder="0" TextColor="Gold" BackgroundColor="#2A2A2A" />
                
                <Label Text="Silbertaler:" Grid.Row="1" Grid.Column="0" TextColor="Silver" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry Text="{Binding SilbertalerText}" Grid.Row="1" Grid.Column="1" Keyboard="Numeric" Placeholder="0" TextColor="Silver" BackgroundColor="#2A2A2A" />
                
                <Label Text="Heller:" Grid.Row="2" Grid.Column="0" TextColor="#CD7F32" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry Text="{Binding HellerText}" Grid.Row="2" Grid.Column="1" Keyboard="Numeric" Placeholder="0" TextColor="#CD7F32" BackgroundColor="#2A2A2A" />
                
                <Label Text="Kreuzer:" Grid.Row="3" Grid.Column="0" TextColor="#6E6E6E" FontAttributes="Bold" VerticalOptions="Center"/>
                <Entry Text="{Binding KreuzerText}" Grid.Row="3" Grid.Column="1" Keyboard="Numeric" Placeholder="0" TextColor="#6E6E6E" BackgroundColor="#2A2A2A" />
            </Grid>
            
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="Abbrechen" Command="{Binding CancelCommand}" BackgroundColor="#333" />
                <Button Text="Transferieren" Command="{Binding ConfirmCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
